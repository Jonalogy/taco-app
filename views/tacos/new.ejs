<h1>New Taco</h1>

<form action="/tacos" method="POST" role="form">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" placeholder="Name of Taco" name="name">
  </div>
  <div class="form-group">
    <label for="amount">Amount</label>
    <input type="number" class="form-control" id="amount" placeholder="Number of Tacos" name="amount">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<a href="/tacos">&larr; Back</a>
